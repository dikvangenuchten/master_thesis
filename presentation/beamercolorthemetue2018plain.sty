% The main theme color: pink
\definecolor{themecolor}{named}{tuescarlet}

\DeclareOptionBeamer{theme}[scarlet]{%
  \ifthenelse{\equal{#1}{scarlet}}{\definecolor{themecolor}{named}{tuescarlet}}{}
  \ifthenelse{\equal{#1}{pink}}{\definecolor{themecolor}{named}{tuepms206}}{}
  \ifthenelse{\equal{#1}{red}}{\definecolor{themecolor}{named}{tuepmswarmred}}{}
  \ifthenelse{\equal{#1}{cyan}}{\definecolor{themecolor}{named}{tuepmsprocesscyan}}{}
  \ifthenelse{\equal{#1}{purple}}{\definecolor{themecolor}{named}{tuepms253}}{}
  \ifthenelse{\equal{#1}{green}}{\definecolor{themecolor}{named}{tuepms375}}{}
  \ifthenelse{\equal{#1}{orange}}{\definecolor{themecolor}{named}{tuepms137}}{}
  \ifthenelse{\equal{#1}{blue}}{\definecolor{themecolor}{named}{tuedarkblue}}{}
}
